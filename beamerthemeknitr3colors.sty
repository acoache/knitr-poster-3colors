%%%%%-- Colors customization section --%%%%%

% Define colors
\definecolor{mgreen}{rgb}{0.0,0.6,0.35}
\definecolor{mblue}{rgb}{0.1,0.4,0.5}
\definecolor{mred}{rgb}{0.9,0.3,0}
\definecolor{morange}{rgb}{0.8500,0.3250,0.0980}
\definecolor{myellow}{rgb}{0.9290,0.6940,0.1250}
\definecolor{mgrey}{rgb}{0.95,0.95,0.95}

% Colors for the headline and the background
\definecolor{leftgradblue}{rgb}{0.12549,0.42745,0.49412}
\definecolor{rightgradblue}{rgb}{0.26275,0.68627,0.78039}
\colorlet{background}{mblue!15}

% Basic colors
\setbeamercolor{cboxb}{fg=black,bg=mblue}
\setbeamercolor{cboxr}{fg=black,bg=red}

% Colors for itemize/enumerate items
\setbeamercolor{item}{fg=mred}
\setbeamercolor{item projected}{fg=white,bg=mred}

% Colors for blocks
\setbeamercolor{block title}{fg=mblue,bg=background}
\setbeamercolor{block body}{fg=black,bg=background}
\setbeamercolor{background canvas}{bg=background}

% Colors for alerted blocks and text
\setbeamercolor{block alerted title}{fg=white,bg=mblue}
\setbeamercolor{block alerted body}{fg=black,bg=mgrey}
\setbeamercolor{alerted text}{fg=mred}

% Style and colors for captions
\setbeamertemplate{caption}[numbered]
\setbeamercolor{caption name}{fg=mred}

% Fonts
\setbeamerfont{section in head/foot}{series=\bfseries}
\setbeamerfont{block title}{series=\bfseries}
\setbeamerfont{block alerted title}{series=\bfseries}
\setbeamerfont{frametitle}{series=\bfseries}
\setbeamerfont{frametitle}{size=\Large}

% Beamer theme options
\setbeamertemplate{title page}[default][colsep=-4bp,rounded=true]
\setbeamertemplate{sections/subsections in toc}[square] 
\setbeamertemplate{items}[circle]
\setbeamertemplate{blocks}[width=0.0]
\hypersetup{colorlinks=true,linkcolor=mblue,urlcolor=mblue,citecolor=mblue}
\beamertemplatenavigationsymbolsempty

% Bibliography style and colors
\setbeamertemplate{bibliography item}[text]
\setbeamercolor{bibliography item}{fg=black,bg=white}
\setbeamercolor{bibliography entry author}{fg=black,bg=white}
\setbeamercolor{bibliography item}{fg=black,bg=white}

